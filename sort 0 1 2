#include <bits/stdc++.h>

void sort012(int* arr, int n) {
    int low = 0;
    int high = n - 1;
    int mid = 0;

    while (mid <= high) {
        if (arr[mid] == 0) {
            std::swap(arr[low], arr[mid]);
            low++;
            mid++;
        } else if (arr[mid] == 2) {
            std::swap(arr[mid], arr[high]);
            high--;
        } else {
            mid++;
        }
    }
}



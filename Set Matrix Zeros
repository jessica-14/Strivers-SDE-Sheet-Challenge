#include <bits/stdc++.h>

void setZeros(std::vector<std::vector<int>>& matrix) {
    int n = matrix.size();
    int m = matrix[0].size();

    std::vector<std::pair<int, int>> store;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            if (matrix[i][j] == 0) {
                store.push_back({i, j});
            }
        }
    }

    for (auto it : store) {
        int r = it.first;
        int c = it.second;

        for (int i = 0; i < m; i++) {
            matrix[r][i] = 0;
        }
        for (int i = 0; i < n; i++) {
            matrix[i][c] = 0;
        }
    }
}
